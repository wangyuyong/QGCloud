<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_register_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20sp"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/backblack"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/addicon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextBlack"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="normal"
            android:text="@string/name"
            />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="normal"
            android:hint="@string/name_limit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/phone_number"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="24sp"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="normal"
            android:text="@string/email"/>

        <EditText
            android:id="@+id/edt_register_email"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/password"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="24sp"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/edt_register_password"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:hint="@string/password_limit"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="24sp"
            android:textStyle="normal"
            android:text="@string/validate_code"/>

        <EditText
            android:id="@+id/edit_validate_code"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <ImageView
            android:id="@+id/imv_validate_code"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:background="@color/colorCode" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/register"
        android:textSize="24sp"
        android:textColor="@color/colorTextWhite"
        android:background="@drawable/round"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>