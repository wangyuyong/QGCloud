<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tb_set_limit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        app:tabTextColor="@color/colorTextBlack"
        app:tabSelectedTextColor="@color/colorBtn"
        app:tabIndicatorColor="@color/colorBtn"
        app:tabBackground="@color/colorDialog">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_set_limited"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20">

        <Button
            android:id="@+id/btn_user_position_cancel"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/bg_dialog"
            android:textColor="@color/colorTextBlack"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/btn_user_position_sure"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/bg_get_code"
            android:textColor="@color/colorTextWhite"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="@string/sure"/>

    </RelativeLayout>

</LinearLayout>