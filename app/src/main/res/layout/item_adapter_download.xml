<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_download_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_dir"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_download_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_download_file_upload_time"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/pb_download"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:qmui_type="type_circle"
        app:qmui_stroke_width="5dp"
        app:qmui_progress_color="@color/colorSelectedBlue"
        app:qmui_background_color="@color/qmui_config_color_gray_8"
        android:background="@mipmap/ic_stop"
        />

</LinearLayout>