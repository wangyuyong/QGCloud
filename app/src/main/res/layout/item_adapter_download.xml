<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_download_file"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:src="@mipmap/ic_word"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_download_file_name"
                android:layout_width="@dimen/dp_250"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorTextBlack"
                />

            <TextView
                android:id="@+id/tv_download_file_upload_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/colorTextGray"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUIProgressBar
        android:id="@+id/pb_download"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        app:qmui_type="type_circle"
        app:qmui_stroke_width="5dp"
        app:qmui_progress_color="@color/colorSelectedBlue"
        app:qmui_background_color="@color/qmui_config_color_gray_8"
        android:background="@mipmap/ic_stop"
        />

</RelativeLayout>